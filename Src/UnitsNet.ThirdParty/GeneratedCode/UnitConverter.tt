        private static bool TryConvert(<#=unitClassName #> value, Unit toUnit, out double newValue)
        {
            switch (toUnit)
            {
<#+         foreach (Unit unit in unitsOfUnitClass) #>
<#+         { #>
                case Unit.<#=unit.ToString() #>:
