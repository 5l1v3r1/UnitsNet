    private void WriteUnitClassTest(UnitClassInfo info)
    {
        /*  Example:
        [Test]
        public void MeterToLengthUnits()
        {
            var t = new LengthTests();
            Assert.AreEqual(t.DegreesInOneDegree, Angle.From(1, AngleUnit.Degree).Convert(AngleUnit.Degree), Delta);

            Assert.AreEqual(t.KilometersInOneMeter, UnitConverter.Convert(1, Unit.Meter, Unit.Kilometer), Delta);
            Assert.AreEqual(t.MetersInOneMeter, UnitConverter.Convert(1, Unit.Meter, Unit.Meter), Delta);
            Assert.AreEqual(t.DecimetersInOneMeter, UnitConverter.Convert(1, Unit.Meter, Unit.Decimeter), Delta);
            ... and so on
        }
        */
        string unitClassName = info.UnitClassName;
        WriteLine("[Test]");
        WriteLine("public void {0}To{1}Units()", info.BaseUnitName, unitClassName);
        WriteLine("{");
        PushIndent("    ");
        WriteLine("var t = new {0}Tests();", unitClassName);

        foreach (UnitInfo unit in info.OrderedUnits)
        {
            string unitPluralName = unit.PluralName;
            string baseUnitName = info.BaseUnitName;
            string unitName = unit.SingularName;
            WriteLine("Assert.AreEqual(t.{0}InOne{1}, {3}.From(1, {4}.{1}).Convert({4}.{2}), Delta);",
                unitPluralName, baseUnitName, unitName, unitClassName, info.UnitEnumType.Name);
        }
        PopIndent();
        WriteLine("}");
    }

